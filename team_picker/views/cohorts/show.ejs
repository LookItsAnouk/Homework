<!-- views/show.ejs -->
<%- include("../partials/header") %>
<div class="card mb-4">
  <% if (cohort.logourl) { %>
  <img class="card-img-top" src="<%= cohort.logourl %>" alt="cohort logo"/>
  <% } %>
  <div class="card-body">
    <h5 class="card-title"><%= cohort.name %></h5>
    <p class="card-text">
      Team Members: <%= cohort.members %><br>
      <em>Created at <%= new Date(cohort.created_at).toLocaleString() %></em>
    </p>
    <div class="d-flex">
      <form method="POST" action="">
        <div class="form-group">
          <label for="teams" style="margin: 10px">Type of Teams</label> <br>
          <input
            type="radio"
            class="form-control"
            name="teams"
            value="team_count"
          />
          "Number Of Teams"
          <input
            type="radio"
            class="form-control"
            name="teams"
            value="per_team"
          />
          "Number Per Team"
        </div>
      <div class="form-group">
        <label for="quantity" style="margin: 10px">Number Per Team</label> <br>
        <input
          type="number"
          class="form-control"
          name="quantity"
        />
      </div>
      <input type="submit" class="btn btn-outline-success" value="Submit" />
    </form>
      <a class="btn btn-outline-success mr-2" href="/cohorts/<%= cohort.id %>/edit">
        Edit
      </a>
    </div>
    <form method="POST" action="/cohorts/<%= cohort.id %>">
      <input type="hidden" name="_method" value="DELETE" />
      <input type="submit" class="btn btn-outline-danger" value="Delete" />
    </form>
  </div>
</div>
<%- include("../partials/footer") %>